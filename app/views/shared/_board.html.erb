<div class="p-4 bg-white block border-b border-gray-200 dark:bg-gray-800 dark:border-gray-700">
  <%= link_to board_url(board) do %>
    <h1 class="text-4xl"> <%= board.name %> </h1>
  <% end %>

  <div class="pt-4 pb-8">
    <table>
      <thead>
        <tr>
          <th scope="col" class="pr-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400">
            Generated by
          </th>
          <th scope="col" class="pr-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400">
            Width
          </th>
          <th scope="col" class="pr-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400">
            Height
          </th>
          <th scope="col" class="pr-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400">
            Number of Mines
          </th>
        </tr>
      </thead>
      <tbody class="bg-white dvide-y divide-gray-200 dark:bg-gray-800 dark:divide-gray-700">
        <tr>
          <td class="pr-4 text-base font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= board.email %></td>
          <td class="pr-4 text-base font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= board.width %></td>
          <td class="pr-4 text-base font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= board.height %></td>
          <td class="pr-4 text-base font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= board.num_mines %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <% if board.locations.nil? %>
    We're unable to place mines to this board. Please try a different board configuration.
  <% else %>
    <div class="w-full overflow-auto">
      <% locations = board.locations.split("|").map { |loc| loc.split(",") } %>
      <% board.height.times do |r| %>
        <li class="p-1 list-none text-nowrap">
          <% board.width.times do |c| %>
            <% if locations.include?([r.to_s, c.to_s]) %>
              ðŸ’£
            <% else %>
              &#11036;
            <% end %>
          <% end %>
        </li>
      <% end %>
    </div>
  <% end %>
</div>
